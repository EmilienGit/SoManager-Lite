<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
        <Button
            android:id="@+id/Juries"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:maxLines="2"
            android:minLines="2"
            android:text="@string/text_myjuries"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="24sp" />
        <Button
            android:id="@+id/Posters"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:maxLines="2"
            android:minLines="2"
            android:text="@string/text_posters"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="24sp" />
        <Button
            android:id="@+id/Marks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:maxLines="2"
            android:minLines="2"
            android:text="@string/text_marks"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="24sp" />
        <Button
            android:id="@+id/Subject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:maxLines="2"
            android:minLines="2"
            android:text="@string/text_subjects"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="24sp" />

    </LinearLayout>

</android.support.v7.widget.CardView>