<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingLeft="6dp"
    android:paddingRight="6dp"
    android:paddingTop="6dp"
    android:paddingBottom="6dp"
    tools:context=".OptionProjectActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:elevation="6dp">
            <LinearLayout
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:padding="4dp"
                >
                <TextView
                    android:id="@+id/titre_projet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="36sp"
                    android:padding="2dp"
                    android:minLines="2"
                    android:maxLines="4"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="Titre : de mon projet"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/number_jury"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="24sp"
                        android:padding="2dp"
                        android:layout_weight="1"
                        android:text="Jury nÂ°X"/>
                    <TextView
                        android:id="@+id/date_jury"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="24sp"
                        android:padding="2dp"
                        android:layout_weight="1"
                        android:text="25 janvier 2019"/>


                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/jury_membre"
                    android:padding="2dp"
                    android:textSize="18sp"
                    android:text="Membres :"/>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/membres_jurys"
                    android:layout_width="match_parent"
                    android:layout_height="100dp" />
                <TextView
                    android:id="@+id/resume_project"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:padding="2dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="Resume:"
                    android:layout_weight="1" />
                <TextView
                    android:id="@+id/tv_details_resume"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:textColor="@color/colorPrimary"
                    android:text="La description de mon projet"
                    android:layout_weight="1" />
                </LinearLayout>
        </android.support.v7.widget.CardView>

    </ScrollView>

</RelativeLayout>